{
  "name": "jewire",
  "repository": {
    "type": "git",
    "url": "https://github.com/nktnet1/jewire"
  },
  "version": "3.0.0",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "test": "jest",
    "tc": "jest --coverage",
    "lint": "eslint './**/*.ts'",
    "lf": "eslint --fix './**/*.ts'",
    "tsc": "tsc --noEmit",
    "build": "tsdown",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "jest",
    "rewire",
    "private",
    "hidden",
    "modules",
    "import",
    "unit",
    "test",
    "fake",
    "dependency",
    "mock",
    "require",
    "shim",
    "comp1531"
  ],
  "author": "Khiet Tam Nguyen",
  "license": "MIT",
  "description": "Rewire private modules for use within Jest.",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/rewire": "^2.5.30",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "meriyah": "^6.1.4",
    "rewire": "^9.0.1"
  },
  "packageManager": "pnpm@10.17.1",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  }
}
